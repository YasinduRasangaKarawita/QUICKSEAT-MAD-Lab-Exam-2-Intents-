<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".offersScreen">

    <LinearLayout
        android:id="@+id/staticLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/top_static"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:background="@color/accent"
                android:src="@drawable/backbtn" />

            <TextView
                android:id="@+id/offersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/redhatdisplay"
                android:text="@string/offerText"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/offer1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bus_container"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staticLayout">

        <TextView
            android:id="@+id/off1MT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/redhatdisplay"
            android:text="@string/off1MT"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/off1ST"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/redhatdisplay"
            android:text="@string/off1ST"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/claimbtn"
            android:layout_width="286dp"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/accent"
            android:fontFamily="@font/redhatdisplay"
            android:text="@string/claimButton"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/offer2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bus_container"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer1">

        <TextView
            android:id="@+id/off2MT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/redhatdisplay"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/off2MT" />

        <TextView
            android:id="@+id/off2ST"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/redhatdisplay"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/off2ST" />

        <Button
            android:id="@+id/claimbtn2"
            android:layout_width="286dp"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/accent"
            android:fontFamily="@font/redhatdisplay"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/claimButton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="380dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nav_bar"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/homebtn"
            android:contentDescription="home"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:src="@drawable/home_icon"
            android:background="@drawable/nav_bar"
            />

        <ImageButton
            android:id="@+id/searchbtn"
            android:contentDescription="search"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:src="@drawable/search_icon"
            android:background="@drawable/nav_bar" />

        <ImageButton
            android:id="@+id/offerbtn"
            android:contentDescription="offers"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:src="@drawable/offers_icon"
            android:background="@drawable/selected_nav"/>

        <ImageButton
            android:id="@+id/profilebtn"
            android:contentDescription="profile"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:src="@drawable/profile_icon"
            android:background="@drawable/nav_bar"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>