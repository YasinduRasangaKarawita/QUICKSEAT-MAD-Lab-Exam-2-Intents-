<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".onboardScreen2">

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/skipColor"
        android:textColor="@color/black"
        android:fontFamily="@font/redhatdisplay"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/skipButton" />

    <ImageView
        android:id="@+id/onboardImage"
        android:layout_width="309dp"
        android:layout_height="284dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:src="@drawable/onboardscreen2" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:text="@string/onboard_screen_2_MT"
        android:textAlignment="center"
        android:textSize="32dp"
        android:fontFamily="@font/redhatdisplay"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/subText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:textColor="@color/subtext"
        android:textAlignment="center"
        android:text="@string/onboard_screen_2_ST" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="286dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:backgroundTint="@color/accent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/nextButton" />
</LinearLayout>